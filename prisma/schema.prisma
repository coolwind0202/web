// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model MemberAccount {
  id                  Int                @id @default(autoincrement())
  profile             MemberProfile?     @relation(fields: [memberProfileId], references: [id])
  discord_user        MemberDiscordUser? @relation(fields: [memberDiscordUserId], references: [id])
  memberProfileId     Int?
  memberDiscordUserId Int?
}

model MemberProfile {
  id            Int             @id @default(autoincrement())
  bio           String
  friend_code   String
  clusters      MemberCluster[]
  MemberAccount MemberAccount[]
}

model MemberDiscordUser {
  id            Int             @id @default(autoincrement())
  discord_id    String          @unique
  username      String
  discriminator String          @db.Char(4)
  avatar_url    String
  MemberAccount MemberAccount[]
}

model MemberCluster {
  id       Int             @id @default(autoincrement())
  icon_url String?
  name     String
  color    String
  members  MemberProfile[]
}
